---
import type { MarkdownInstance } from "astro";
import CardListingLayout from "@layouts/CardListingLayout.astro";
let blogPosts: MarkdownInstance<Record<string, any>>[];
try {
  blogPosts = await Astro.glob("./blog/*.md*");
} catch {
  blogPosts = [];
}
---

<CardListingLayout title="Blog" glob={blogPosts} />
