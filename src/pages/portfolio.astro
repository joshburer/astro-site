---
import type { MarkdownInstance } from "astro";
import CardListingLayout from "@layouts/CardListingLayout.astro";
let portfolioItems: MarkdownInstance<Record<string, any>>[];
try {
  portfolioItems = await Astro.glob("./portfolio/*.md*");
} catch {
  portfolioItems = [];
}
---

<CardListingLayout title="Portfolio & Experience" glob={portfolioItems} />
